.tab
    width 100%
    height 7vh
    background-color #d44439
    display flex
    .tab-item
        flex 1
        display flex
        justify-content center
        align-items center
        color #e2cfcd
        text-decoration none
        font-size 11px
    .tab-item-isSelected
        flex 1
        display flex
        justify-content center
        align-items center
        color #ffffff
        font-size 13px
        font-weight 400
        text-decoration none