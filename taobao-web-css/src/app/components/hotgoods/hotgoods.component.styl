.box{
    display flex
    justify-content center
    margin-top 10px
    &>:first-child{
        width 1190px
        height 792px
        background-color #fff
        &>.top{
            height 89px
            width 100%
            height 49px
            display flex
            justify-content flex-start 
            align-items center
            &>div{
                width 4px
                height 16px
                background-color #FF4520
                margin-left 20px
            }
            &>span{
                color: #FF4520;
                font-size: 20px;
                line-height: 48px;
                margin-left 10px
                font-family 'Hiragino Sans GB'
            }
        }
        &>.list{
            width 100%
            height 42px
            margin-left 20px
            &>span{
                padding 0px 5px 0px 5px
                color #999999
                font-size 12px
                cursor pointer
            }
            &>span:hover{
                color #FF4520
            }
        }
        &>.buttom{
            height 701px
            width 100%
            display flex
            flex-direction row
            flex-wrap wrap
            &>.goodsbox{
                width 238px
                height 350px
                border-top 1px solid #f4f4f4
                border-right 1px solid #f4f4f4
                border-buttom 1px solid #f4f4f4
                border-left 1px solid #f4f4f4
                background-color #fff
                cursor pointer
                &>div{
                    &>.dec{
                        height: 40px;
                        line-height: 20px;
                        overflow: hidden;
                        margin: 8px 0;
                        color: #666;
                        font-size: 14px;
                    }
                    &>.comment{
                        &>span{
                            font-size 12px
                            color #999999
                            margin-right 10px
                        }
                    }
                }
            }
            &>.goodsbox:hover{
                border 1px solid #FF5000
            }
        }
    }
}

.imgbox{
    display flex
    justify-content center
    margin-top 10px
    &>div{
        width 1190px
        height 170px
        background-color #fff
        display flex
        align-items center
        justify-content center
        &>div{
            width 375px
            height 130px
        }
    }
}