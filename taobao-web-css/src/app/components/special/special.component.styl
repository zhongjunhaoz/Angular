.box{
    display flex
    justify-content center
    margin-top 10px
    &>div{
        width 1190px    
        height 290px
        background-color #fff
        display flex
        &>.left{
            width 840px
            height 290px
            padding-right 5px
            &>.top{
                width 840px
                height 49px
                display flex
                justify-content flex-start 
                align-items center
                // background-color red
                &>div{
                    width 4px
                    height 16px
                    background-color #8558d6
                    margin-left 20px
                }
                &>span{
                    color: #AD45Df;
                    font-size: 20px;
                    line-height: 48px;
                    margin-left 10px
                    font-family 'Hiragino Sans GB'
                }
            }
            &>.buttom{
                width 840px
                height 236px
                display flex
                &>div{
                    width 210px
                    height 236px
                    border-top 1px solid #f4f4f4
                    border-right 1px solid #f4f4f4
                    border-bottom 1px solid #f4f4f4
                    border-left 1px solid #f4f4f4
                    &>p{
                        width 188px
                        height 26px
                        padding-left 20px
                        margin 17px 0px 0px 5px
                        color: #3C3C3C;
                        font-size: 18px;
                        font-weight: normal;
                    }
                    &>div{
                        width 188px
                        height 22px
                        padding-left 20px
                        color #999999
                        font-size 12px
                    }
                    &>.imgbox{
                        width 208px
                        height 150px
                        display flex
                        justify-content center
                    }
                }
                &>div:hover{
                    border 1px solid #FF4C23
                }
            }
        }
        &>.right{
            width 340px
            height 290px
            display flex
            justify-content center
            text-align center
        }
    }
}