.box{
    display flex
    justify-content center
    margin-top 10px
    
    .goodsBox{
        width 1190px
        height 358px
        background-color #ffffff
        border-radius 5px
        &>.title{
            width 100%
            height 24px
            margin 20px
            &>span{
                font-size 12px
                color #999999
                font-weight 400
                margin-left 5px
            }
        }
        &>.goods{
            width 100%
            height 288px
            display flex
            flex-wrap: nowrap
            &>div{
                width 180px
                height 271px
                background-color #fff
                flex 1
                margin 0 14px 0 17px
                &>img{
                    width 180px
                    height 180px
                }
                &>.name{
                    margin-top: 5px;
                    font-size: 16px;
                    height: 28px;
                    overflow: hidden;
                    line-height: 28px;
                    font-weight: normal;
                    color: #3C3C3C;
                    cursor pointer
                }
                &>.dec{
                    line-height: 24px
                    color: #999;
                    font-size: 14px;
                    overflow: hidden;
                    width 100%
                    height: 24px;
                }
                &>p{
                    height 22px
                    line-height 22px
                    color: #35b1ff;
                    margin-top 12px
                    font-size: 14px;
                }
            }
        }
    }
}

.imgbox{
    width 1190px
    height 70px
}